# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080/api
NEXT_PUBLIC_API_VERSION=v1

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Third-party Services
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_INTERCOM_APP_ID=your-intercom-id

# AI Services
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key
NEXT_PUBLIC_REPLICATE_API_KEY=your-replicate-api-key
NEXT_PUBLIC_STABILITY_API_KEY=your-stability-api-key

# Cloud Storage
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-cloudinary-key
NEXT_PUBLIC_CLOUDINARY_API_SECRET=your-cloudinary-secret

# Video Processing
NEXT_PUBLIC_VIDEO_ENCODING_API_KEY=your-video-encoding-api-key
NEXT_PUBLIC_VIDEO_ENCODING_API_URL=your-video-encoding-api-url

# Redis
NEXT_PUBLIC_REDIS_URL=redis://localhost:6379

# Database
NEXT_PUBLIC_DATABASE_URL=postgresql://username:password@localhost:5432/video_platform

# CDN
NEXT_PUBLIC_CDN_URL=https://cdn.video-platform.com

# Web3
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your-wallet-connect-id
NEXT_PUBLIC_INFURA_PROJECT_ID=your-infura-id

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_LIVE_STREAMING=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_WEB3=true
NEXT_PUBLIC_ENABLE_AR_VR=false

# Performance
NEXT_PUBLIC_ENABLE_CACHING=true
NEXT_PUBLIC_CACHE_TTL=3600

# Development
NODE_ENV=development